{
  "name": "electron-boilerplate",
  "version": "0.1.0",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "dev": "cross-env PORT=3080 NODE_ENV=development node config/webpackDevServer.js",
    "dev:electron": "yarn build:dev && cross-env NODE_ENV=development electron ./build/main.js",
    "build:dev": "yarn clean:build && concurrently \"yarn build:dev:main \" \"yarn build:dev:renderer\"",
    "build:dev:main": "cross-env webpack --config ./config/webpack.config.main.js --progress --profile --colors",
    "build:dev:renderer": "cross-env webpack --config ./config/webpack.config.renderer.js --progress --profile --colors",
    "clean:build": "rimraf build",
    "release": "yarn clean:build && yarn clean:dist && concurrently \"yarn build:main \" \"yarn build:renderer\"",
    "build:main": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.main.prod.js --progress --profile --colors",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.renderer.prod.js --progress --profile --colors",
    "clean:dist": "rimraf dist",
    "release-win": "yarn release && electron-builder --win --x64",
    "release-linux": "yarn release && electron-builder --linux",
    "release-mac": "yarn release && electron-builder --mac --x64",
    "release-all": "yarn release && electron-builder --win --x64 && electron-builder --mac --x64",
    "test": "node --trace-warnings ./test/runTests.js",
    "e2e": "node --trace-warnings ./test/runTests.js e2e",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "changelog": "standard-version"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.1.2",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/paper": "^0.11.2",
    "@types/react": "^16.7.7",
    "@types/react-dom": "^16.0.10",
    "@types/react-hot-loader": "^4.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "commitlint": "^7.2.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.36.2",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "file-loader": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.5.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "react-hot-loader": "^4.3.12",
    "react-test-renderer": "^16.6.3",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "ts-import-plugin": "^1.5.5",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "@babel/core": "^7.1.6",
    "antd": "^3.10.8",
    "paper": "^0.11.8",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "browserslist": [
    ">= 1%",
    "last 5 versions"
  ],
  "build": {
    "productName": "AppDev",
    "appId": "supcon.appdev",
    "files": [
      "build/",
      "node_modules/",
      "./build/index.html",
      "./build/main.js.map",
      "./build/main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "output": "dist"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "collectCoverage": true
  }
}
