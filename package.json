{
  "name": "electron-boilerplate",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/navono/electron-boilerplate.git",
  "author": "navono <navono007@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "package": "yarn compile && build --publish never",
    "package-win": "yarn compile && build --win --x64",
    "package-linux": "yarn compile&& build --linux",
    "package-all": "yarn compile && build -mwl"
  },
  "devDependencies": {
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^5.0.14",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "electron-webpack": "^1.11.0",
    "electron-webpack-ts": "^1.2.0",
    "react-hot-loader": "^3.1.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "resolutions": {
    "webpack-sources": "1.0.1"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "source-map-support": "^0.5.0"
  },
  "build": {
    "productName": "ElectronBoilerplate",
    "appId": "io.github.navono.ElectronBoilerplate",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "node_modules/",
      "dist/renderer/index.html",
      "dist/main/main.js",
      "dist/main/main.js.map",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
